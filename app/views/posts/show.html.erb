
<div class="post-bg header" style="background-image: url(<%= @post.header_url %>);">
</div>

<div class="content-container">
  <div class="header-title">
    <h1 class="header-title"><%= @post.title %></h1>
  </div>
  <h4><%= link_to 'Edit', edit_post_path(@post) %> | <%= link_to 'Delete', post_path(@post),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></h4>

  <p class="post-text"><%= @post.text %></p>
</div>
